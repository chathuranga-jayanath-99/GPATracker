<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlMarkResultBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/llModuleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Module Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvModuleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:hint="CS-101"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llModuleCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llModuleName"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Module Credits"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvModuleCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llModuleName"
                android:layout_weight="0.6"
                android:hint="3.0"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llModuleResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llModuleCredits"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Module Result"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvModuleCurrentCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="0.6"

                android:textSize="20sp" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llModuleResult"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbAPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A+" />

            <RadioButton
                android:id="@+id/rbA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A" />

            <RadioButton
                android:id="@+id/rbAMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-" />

            <RadioButton
                android:id="@+id/rbBPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B+" />

            <RadioButton
                android:id="@+id/rbB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B" />

            <RadioButton
                android:id="@+id/rbBMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-" />

            <RadioButton
                android:id="@+id/rbCPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C+" />

            <RadioButton
                android:id="@+id/rbC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C" />

            <RadioButton
                android:id="@+id/rbCMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C-" />

            <RadioButton
                android:id="@+id/rbD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D" />
        </RadioGroup>

        <Button
            android:id="@+id/btnMarkResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgResults"
            android:text="Mark result"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>